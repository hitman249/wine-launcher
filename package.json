{
  "name": "wine-launcher",
  "version": "1.0.0",
  "description": "Wine Container Application",
  "main": "main.js",
  "scripts": {
    "start": "cd src && npm run build && cd .. && electron .",
    "serve": "cd src && npm run serve",
    "env": "cd src && npm run env",
    "fast": "electron .",
    "pack": "cd src && npm run build && cd .. && electron-builder --dir",
    "build": "chmod +x ./build/build.sh && ./build/build.sh"
  },
  "build": {
    "appId": "wine.launcher",
    "files": [
      "app/**/*",
      "build/**/*",
      "node_modules/**/*",
      "package.json",
      "main.js"
    ],
    "publish": null,
    "linux": {
      "executableArgs": [
        "--no-sandbox"
      ],
      "target": [
        "AppImage"
      ],
      "icon": "build/icons/512.png",
      "category": "Game",
      "desktop": {
        "X-AppImage-Integrate": "false"
      }
    }
  },
  "repository": "",
  "keywords": [],
  "author": "Neiron",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^11.2.0",
    "electron-builder": "^22.9.1"
  },
  "dependencies": {
    "iconv-lite": "^0.5.2",
    "node-fetch": "^2.6.1"
  }
}
